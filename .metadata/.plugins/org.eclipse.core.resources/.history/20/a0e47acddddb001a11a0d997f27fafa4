package For_while;

import java.util.Scanner;

/**
 * @author Bruno
 *
 */

public class Exercicio_1 {

	public static void main (String args[])
{
	
	
	Scanner ler = new Scanner (System.in);
	
	int i,x,contador=0,impar=0,par=0;

	for (i=1; i<=10; i++)
	{
	
	System.out.println("Digite 10 valores ");
	x = ler.nextInt();
	}
	if(contador%2==0)
	
	{
		par++;
		
		System.out.println("Quantidade de números pares"+i);
		
	}
	
	else 
	{
		impar++;
		
		System.out.println("Quantidade de números impares"+i);

	}
	System.out.println("Quantidade de números pares"+i);
	System.out.println("Quantidade de números impares"+i);
}

}

