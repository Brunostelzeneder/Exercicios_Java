package Exercicio_Treino;

import java.util.Scanner;

public class Exercicio_2 {

	public static void main (String args[]) {
		
		Scanner ler = new Scanner(System.in);
		
		float peso, altura, imc;
		
		
		System.out.println("Por favor, digite o seu peso: ");
		peso = ler.nextInt();
		
		System.out.println("Por favor, digite a sua altura: ");
		altura = ler.nextInt();
		
		imc = peso /(altura * altura);
		
		if(imc < 18.5) 
			{
			System.out.printf("Você está abaixo do peso com imc %2f: ");	
			}
		if(imc > 18.5 && imc < 25) 
			{
			System.out.println("Você está na medida ideal com imc: "+imc);	
			}
		if(imc > 25 && imc < 30) 
			{
			System.out.println("Você está acima do peso com imc: "+imc);	
			}
		if(imc > 30) 
		{
		System.out.println("Você está obeso com imc: "+imc);		
		}
	System.out.println("Obrigado por utilizar o software de medidas");
	}
}
