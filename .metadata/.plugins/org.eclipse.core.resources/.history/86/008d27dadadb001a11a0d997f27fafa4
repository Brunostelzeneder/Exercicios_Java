package For_while;

import java.util.Scanner;

/**
 * @author Bruno
 *
 */

public class Exercicio_1 {

	public static void main (String args[])
{
	
	
	Scanner ler = new Scanner (System.in);
	
	int x,i = 0,impar=0,par=0;

	for (x=1; x<=10; x++)
	{
	
	System.out.println("Digite 10 valores ");
	i = ler.nextInt();
	}
	if(i%2==0)
	
	{
		par++;
		
		
		
	}
	
	else 
	{
		impar++;
		
	
	}
	System.out.println("\n a quantidade de números pares é de:  "+par);
	System.out.println("\n a quantidade de números impares é de:  "+impar);
}

}

